	public static void main(String[] args) throws IOException {
		
		String miPath = "C:\\";
		
		PrintWriter salida = new PrintWriter(new FileWriter(miPath+"salida.out"));  //  preparo el arch de salida
	     
	    int z=50;
	    String s="dni:";
	    salida.print(s);      
